<h2>profile</h2>

<p>You are signed in as <%= current_user['email']%> </p>

<form action="/sessions" method="post">
    <input type="hidden" name="_method" value="delete">
    <button>log out</button>
</form>

<h3>Your Posts</h3>

<div class="index_container">

    <% user_foods.each do |food| %>

        <div class="food_card">
            <img src="<%= food['image_url'] %>" alt="<%= food['food_type']%>">
            <div>
                <h3><%= food['food_type'] %></h3>
                <p> <%= food['location_description'] %> </p>
                <p> posted by: <%= current_user['email'] %> </p>
            </div>
        </div>

    <% end %>

</div>