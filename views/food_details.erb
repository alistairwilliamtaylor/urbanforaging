<% if current_user['id'] == food['user_id'] %>
    
    <section class="details_buttons">
        <form action="/foods/edit">
            <input type="hidden" name="food_id" value="<%=food['id']%>">
            <button id="details_button">edit</button>
        </form>

        <form action="/foods" method="post">
            <input type="hidden" name="_method" value="delete">
            <input type="hidden" name="food_id" value="<%=food['id']%>">
            <button id="details_button">delete</button>
        </form>
    </section>

<% end  %>

<div class="food_details">
    <img src="<%= food['image_url'] %>" alt="picture of <%= food['food_type'] %>">
    <div>
        <h3><%= food['food_type'] %></h3>
        <p> <%= food['location_description'] %> </p>
    </div>
</div>